<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLinearLayoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_s"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/record_keeping_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/activity_vertical_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_keeping" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ScrollView
            android:id="@+id/record_keeping_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:background="@drawable/bg_header_top_rounded_rectangle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/signs_display" />

                        <TextView
                            android:id="@+id/marks_signs_display"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/signs_display_adequate"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/adequate" />

                        <CheckBox
                            android:id="@+id/signs_display_appropriate"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/appropriate" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:background="@drawable/bg_header_top_rounded_rectangle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/smoking" />

                        <TextView
                            android:id="@+id/marks_smoking"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>


                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/smoking_separated"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/separated" />

                        <CheckBox
                            android:id="@+id/smoking_proper"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/proper" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:background="@drawable/bg_header_top_rounded_rectangle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food_safety_certifications" />

                        <TextView
                            android:id="@+id/marks_food_safety_certifications"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/food_safety_certifications_owners"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/owners" />

                        <CheckBox
                            android:id="@+id/food_safety_certifications_handlers"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/handlers" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:background="@drawable/bg_header_top_rounded_rectangle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/record_keeping_food_raw_ingredients" />

                        <TextView
                            android:id="@+id/marks_record_keeping_food_raw_ingredients"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/record_keeping_food_raw_ingredients_selling"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/selling" />

                        <CheckBox
                            android:id="@+id/record_keeping_food_raw_ingredients_receiving"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/receiving" />

                        <CheckBox
                            android:id="@+id/record_keeping_food_raw_ingredients_workers"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/workers" />

                        <CheckBox
                            android:id="@+id/record_keeping_food_raw_ingredients_billing"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/billing" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/packaging_materials_comment"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/add_comments_here" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/linears"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/record_keeping_total_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="@string/total_marks" />
                </LinearLayout>

                <LinearLayout
                    style="@style/linears"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">


                    <Button
                        android:id="@+id/record_keeping_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/gradient_btn"
                        android:text="@string/next" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>