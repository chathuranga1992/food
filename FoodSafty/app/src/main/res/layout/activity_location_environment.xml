<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinearLayoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_s"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".new_record_LocationEnvironment.LocationEnvironmentActivity">

    <ProgressBar
        android:id="@+id/building_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/activity_vertical_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/location"
            android:padding="8dp"
            android:text="Location/Environment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ScrollView
            android:id="@+id/location_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:background="@drawable/bg_rectangle_shadow"-->
                <!--android:orientation="vertical"-->
                <!--android:visibility="gone">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_header_top_rounded_rectangle"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suitability" />

                        <TextView
                            android:id="@+id/marks_location_suitability"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/location_suitability_amenity"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="clip_vertical"
                            android:gravity="clip_vertical"
                            android:text="Amenity" />

                        <CheckBox
                            android:id="@+id/location_suitability_accessibility"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Accessibility" />


                        <CheckBox
                            android:id="@+id/location_suitability_activity"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Activity" />

                        <CheckBox
                            android:id="@+id/location_suitability_visibilty"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Visibility" />

                    </LinearLayout>
                </LinearLayout>
                <!--</LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appearance" />

                        <TextView
                            android:id="@+id/marks_loaction_appearance"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/location_appearance_attractive"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attractive" />

                        <CheckBox
                            android:id="@+id/location_appearance_beautiful"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="Beautiful" />

                    </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pollution" />

                        <TextView
                            android:id="@+id/marks_location_pollution"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/location_pollution_no_accumilation"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Accumilation" />

                        <CheckBox
                            android:id="@+id/location_pollution_no_dust"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="No Dust" />


                        <CheckBox
                            android:id="@+id/location_pollution_no_smoke"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Smoke" />

                        <CheckBox
                            android:id="@+id/location_pollution_no_adverseeffects"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Adverse Effects" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_rounded_white_rectangle"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        style="@style/headers"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/SectionTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Animals" />

                        <TextView
                            android:id="@+id/marks_location_animals"
                            style="@style/edit_texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="60dp"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:text="@string/marks" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linears"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/location_animals_dogcats"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dog/Cats" />

                        <CheckBox
                            android:id="@+id/location_animals_other"
                            style="@style/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="Other" />
                    </LinearLayout>
                </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_white_rectangle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/location_comments"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/add_comments_here" />
                    </com.google.android.material.textfield.TextInputLayout>




                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="@string/total_marks"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/location_total_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/linears"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <Button
                        android:id="@+id/location_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/social_google_btn"
                        android:onClick="setLocation"
                        android:text="@string/next" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
</LinearLayout>
</LinearLayout>